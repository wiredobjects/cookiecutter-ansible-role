

[*.py]
indent_style = space
indent_size = 4

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = tab

[.git/COMMIT_EDITMSG]
max_line_length = 72

####
# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Python PEP8 https://www.python.org/dev/peps/pep-0008/
[*.py]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# JSON and YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
